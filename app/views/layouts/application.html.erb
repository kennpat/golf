<!DOCTYPE html>
<html>
<head>
  <title>Golf</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
  <script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.5.1/moment.min.js"></script>
  <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Oswald">
  <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=#{env[GOOGLE_MAPS_API_KEY]}"></script>

</head>
<body>
  <% unless current_page?(root_path) %>
    <nav class="top-bar">
      <ul class="title-area">
        <li class="name">
          <h1><a href="/">Golf</a></h1>
        </li>
      </ul>
      <ul class="left">
      <!-- Search | has-form wrapper -->
        <li class="has-form">
          <%= form_tag users_path, method: :get do %>
            <div class="row collapse">
              <div class="small-8 columns">
                <%= text_field_tag :player_query, nil, placeholder: "Search Users", id: "player_search" %>
              </div>
              <div class="small-4 columns">
                <%= submit_tag "Search", { class: "button expand" } %>
              </div>
            </div>
          <% end %>
        </li>
      </ul>

      <section class="top-bar-section">
        <ul class="right">
          <%- if current_user -%>
            <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
          <%- else -%>
            <li><%= link_to 'Sign Up', new_user_registration_path %></li>
            <li><%= link_to 'Sign In', new_user_session_path %></li>
          <%- end -%>
        </ul>
      </section>
    </nav>
  <% end %>
  <%- flash.each do |key, value| -%>
    <div class="alert-box flash-<%= key %>" style="margin-bottom:0;">
      <%= value %>
      <a href="" class="close">Ã—</a>
    </div>
  <%- end -%>

  <%= yield %>

  <%= javascript_include_tag 'application' %>
  <%= javascript_tag do %>
    $(function(){
      $(document).foundation();
    });
  <% end %>
  <%= yield :extra_footer %>
</body>
</html>
